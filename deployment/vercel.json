{
  "version": 2,
  "builds": [
    {
      "src": "apps/backend/src/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/apps/backend/src/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/apps/frontend/$1"
    }
  ],
  "env": {
    "VITE_API_BASE": "http://localhost:4000",
    "VITE_BACKEND_HOST": "localhost",
    "VITE_BACKEND_PORT": 4000,
    "VITE_GAMELITE_KEY": "dev-admin-key-2024",
    "VITE_WS_URL": "ws://localhost:4000"
  },
  "build": {
    "env": {
      "NODE_ENV": "development",
      "PORT": 4000,
      "DATABASE_URL": "postgresql://postgres:Gana11602@localhost:5432/rfid",
      "PG_SSL": false,
      "MQTT_URL": "mqtt://localhost:1883",
      "GAMELITE_ADMIN_KEY": "dev-admin-key-2024",
      "JWT_SECRET": "your-jwt-secret-key-here",
      "LOG_LEVEL": "debug"
    }
  }
}