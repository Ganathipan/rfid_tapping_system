{
  "testEnvironment": "node",
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
  "testMatch": ["<rootDir>/tests/**/*.test.js"],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/app.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "testTimeout": 10000
}